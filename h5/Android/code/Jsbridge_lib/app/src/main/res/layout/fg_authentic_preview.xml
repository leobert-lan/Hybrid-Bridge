<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context="com.lht.cloudjob.fragment.FgAuthenticPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/authpreview_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/v1011_drawable_mask_refuse" />

        <TextView
            android:id="@+id/authpreview_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/sub_strong_red" />

        <TextView
            android:id="@+id/authpreview_tv_region"
            style="@style/style_edittext"
            android:layout_marginTop="5dp"
            android:textColor="@color/h3_text_gray_hint" />

        <include
            android:id="@+id/line1"
            layout="@layout/line_gray_1px" />

        <TextView
            android:id="@+id/authpreview_tv_name"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint" />

        <include
            android:id="@+id/line2"
            layout="@layout/line_gray_1px" />

        <TextView
            android:id="@+id/authpreview_tv_identify"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint" />

        <include
            android:id="@+id/line3"
            layout="@layout/line_gray_1px" />

        <TextView
            android:id="@+id/authpreview_tv_validity"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/authpreview_img_pic1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_conner_5dp_white_border1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/authpreview_img_pic2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_conner_5dp_white_border1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/authpreview_img_pic3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_conner_5dp_white_border1dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <Button
            android:id="@+id/authpreview_btn_edit"
            style="@style/style_button.blue"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</ScrollView>
