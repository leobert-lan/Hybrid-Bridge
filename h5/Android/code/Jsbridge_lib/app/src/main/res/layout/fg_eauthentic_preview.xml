<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context="com.lht.cloudjob.fragment.FgAuthenticPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/authpreview_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/v1011_drawable_mask_refuse"/>

        <TextView
            android:id="@+id/authpreview_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/sub_strong_red"/>

        <TextView
            android:id="@+id/authpreview_tv_companyname"
            style="@style/style_edittext"
            android:layout_marginTop="5dp"
            android:textColor="@color/h3_text_gray_hint"/>

        <include
            android:id="@+id/line1"
            layout="@layout/line_gray_1px"/>

        <TextView
            android:id="@+id/authpreview_tv_name"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint"/>

        <include
            android:id="@+id/line2"
            layout="@layout/line_gray_1px"/>

        <TextView
            android:id="@+id/authpreview_tv_registercode"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint"/>

        <include
            android:id="@+id/line3"
            layout="@layout/line_gray_1px"/>

        <TextView
            android:id="@+id/authpreview_tv_turnover"
            style="@style/style_edittext"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/h3_text_gray_hint"/>

        <include
            android:id="@+id/line3"
            layout="@layout/line_gray_1px"/>

        <TextView
            android:id="@+id/authpreview_tv_registerarea"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint"/>

        <include
            android:id="@+id/line3"
            layout="@layout/line_gray_1px"/>

        <TextView
            android:id="@+id/authpreview_tv_validity"
            style="@style/style_edittext"
            android:textColor="@color/h3_text_gray_hint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/authpreview_img_license"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_conner_5dp_white_border1dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/authpreview_img_logo"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_conner_5dp_white_border1dp"
                android:scaleType="fitXY"
                android:visibility="gone"/>


        </LinearLayout>

        <Button
            android:id="@+id/authpreview_btn_edit"
            style="@style/style_button.blue"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</ScrollView>
