<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:paddingBottom="10dp">

        <FrameLayout
            android:id="@+id/frame_sysmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin">

            <ImageView
                android:id="@+id/img_sysmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/v1011_drawable_icon_sysmsg" />

            <TextView
                android:id="@+id/message_tv_syscount"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right|top"
                android:background="@drawable/bg_notify_number"
                android:gravity="center"
                android:minWidth="10dp"
                android:textColor="@color/text_white"
                android:textSize="8sp"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            style="@style/style_textview.tpstrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/message_tv_systime"
            android:layout_toRightOf="@+id/frame_sysmsg"
            android:text="@string/title_activity_sysmsglist"
            android:textSize="@dimen/fontsize_content_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_tv_systime"
            style="@style/style_textview.sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/fontsize_content_slim" />

        <TextView
            android:id="@+id/message_tv_syssummary"
            style="@style/style_textview.sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_sysmsg"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/frame_sysmsg"
            android:singleLine="true"
            android:textSize="@dimen/fontsize_content_icon" />
    </RelativeLayout>

    <include
        android:id="@+id/line1"
        layout="@layout/line_gray_1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/row1" />

    <RelativeLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:id="@+id/frame_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin">

            <ImageView
                android:id="@+id/img_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/v1011_drawable_icon_notify" />

            <TextView
                android:id="@+id/message_tv_notifycount"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right|top"
                android:background="@drawable/bg_notify_number"
                android:gravity="center"
                android:minWidth="10dp"
                android:textColor="@color/text_white"
                android:textSize="8sp"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            style="@style/style_textview.tpstrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/message_tv_notifytime"
            android:layout_toRightOf="@+id/frame_notify"
            android:text="@string/title_activity_notifylist"
            android:textSize="@dimen/fontsize_content_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_tv_notifytime"
            style="@style/style_textview.sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/fontsize_content_slim" />

        <TextView
            android:id="@+id/message_tv_notifysummary"
            style="@style/style_textview.sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_notify"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/frame_notify"
            android:singleLine="true"
            android:textSize="@dimen/fontsize_content_icon" />
    </RelativeLayout>

    <include
        layout="@layout/line_gray_1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/row2" />

    <com.lht.cloudjob.customview.MaskView
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/absbar_height"
        android:visibility="gone" />

    <include layout="@layout/bar_tool_message" />

</RelativeLayout>